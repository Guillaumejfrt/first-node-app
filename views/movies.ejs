<!DOCTYPE html>

<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <title>Express Movies</title>
    <link rel="stylesheet" href="../public/style.css">
  </head>
  <body>
    <div class="central">
      <% include ./partials/header %>

      <h1>liste des films</h1>
      <ul id="movies-list">
        <% frenchMovies.forEach((movie) => { %>
          <li><%= movie.title %> - <%= movie.year %></li>
        <% })%>
      </ul>

      <div>
        <form action="/movies" method="post">
          <label for="title">Titre du film</label>
          <input type="text" name="title" id="title">
          <label for="year">Année du film</label>
          <input type="text" name="year" id="year">
          <button type="submit">Créer</button>
        </form>
      </div>
    </div>
    <% include ./partials/footer %>

    <script>
      const checkStatus = (response) => {
        if (response.status >= 200 && response.status < 300) {
          const movieList = document.getElementById('movies-list');

          let newMovieLi = document.createElement('li');
          const movieTitle = document.getElementById('title').value;
          const movieYear = document.getElementById('year').value;
          newMovieLi.innerHTML = `${movieTitle} - ${movieYear}`;
          movieList.appendChild(newMovieLi);
          // movieList.insertAdjacentHTML('beforeend', newMovieLi.innerHTML);
          document.querySelector('form').reset();
          document.getElementById('title').focus();
        }
      }

      const addMovie = (e) => {
        e.preventDefault();

        if (window.fetch) {
          fetch("/movies", {
            method: 'post',
            body: new FormData(form)
          })
          .then(checkStatus)
          .catch((error) => {
            console.error('request failed', error);
          });

        } else {
          // jQuery, XHR (Xml Http Request)
        }
      }

      const form = document.querySelector('form');
      form.addEventListener('submit', addMovie);
    </script>
  </body>
</html>
